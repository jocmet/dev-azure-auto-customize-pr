{
  "name": "azure-devops-without-merged-pr",
  "version": "0.2.2",
  "description": "Chrome extension to complete pull requests  with customize merge commit message on dev.azure.com",
  "author": "Jochen Metzinger",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jocmet/dev-azure-auto-customize-pr.git"
  },
  "bugs": {
    "url": "https://github.com/jocmet/dev-azure-auto-customize-pr/issues"
  },
  "homepage": "https://github.com/jocmet/dev-azure-auto-customize-pr#readme",
  "private": true,
  "type": "module",
  "scripts": {
    "prestart": "rimraf dist web-ext-artifacts",
    "start": "run-s eslint prettier build package",
    "start:chrome": "run-s eslint prettier build:chrome package:chrome",
    "start:firefox": "run-s eslint prettier build:firefox package:firefox",
    "build": "run-s build:*",
    "build:chrome": "tsc && cross-env BROWSER=chrome vite build",
    "build:firefox": "tsc && cross-env BROWSER=firefox vite build",
    "package": "run-s package:*",
    "package:chrome": "web-ext build -s dist/chrome -a web-ext-artifacts/chrome",
    "prepackage:firefox": "web-ext lint -s dist/firefox",
    "package:firefox": "web-ext build -s dist/firefox -a web-ext-artifacts/firefox",
    "create-icons": "node create-icons.mjs",
    "eslint": "eslint src",
    "prettier": "prettier --log-level warn --write src",
    "ncu": "npm-check-updates -i --format group"
  },
  "dependencies": {
    "webextension-polyfill": "~0.12.0"
  },
  "devDependencies": {
    "@eslint/js": "~9.37.0",
    "@types/webextension-polyfill": "~0.12.4",
    "cross-env": "~10.1.0",
    "eslint": "~9.37.0",
    "npm-check-updates": "~19.0.0",
    "npm-run-all2": "~8.0.4",
    "prettier": "~3.6.2",
    "rimraf": "~6.0.1",
    "sharp": "~0.34.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "~8.46.0",
    "vite": "~7.1.9",
    "vite-plugin-eslint": "~1.8.1",
    "vite-plugin-web-extension": "~4.4.5",
    "web-ext": "~8.10.0"
  },
  "volta": {
    "node": "22.19.0"
  }
}
